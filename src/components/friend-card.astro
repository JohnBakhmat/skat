---
interface Props {
	name: string;
	logo?: string;
	logoClass?: string;
}

const { name, logo, logoClass } = Astro.props;
---

<div
	class="flex flex-col border-2 border-white rounded-3xl p-5 md:p-10 col-span-2 justify-between"
>
	<p class="text-2xl md:text-4xl">{name}</p>
	<img src={logo} alt={name} class:list={[logoClass, "w-fit self-end"]} />
</div>
