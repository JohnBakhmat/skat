---
import MapPin from "../assets/map-pin.svg";
interface Props {
	cities: string[];
}
const { cities } = Astro.props;
---

<div class="flex flex-col justify-end">
	<div
		class="grid grid-cols-[auto_1fr] grid-rows-[auto_1fr] place-items-center gap-y-5 gap-x-10 pb-5"
	>
		<MapPin class="size-10" />
		<div
			class="flex flex-col gap-y-2 row-span-2 justify-self-start text-4xl"
		>
			{cities.map((x) => <p>{x}</p>)}
		</div>
		<div class="h-full bg-white w-[2px]"></div>
	</div>
</div>
